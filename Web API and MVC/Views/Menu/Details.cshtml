@model HotBytee.MVC.Models.MenuItem

@{
    ViewData["Title"] = "Item Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div class="card mb-3" style="max-width: 600px;">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" />
    <div class="card-body">
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>Price:</strong> ₹@Model.Price</p>
        <p><strong>Type:</strong> @Model.DietaryInfo</p>
        <p><strong>Taste:</strong> @Model.TasteInfo</p>
        <p><strong>Nutrition:</strong> @Model.NutritionalInfo</p>
        <p><strong>Description:</strong> @Model.Description</p>

        <form asp-controller="Cart" asp-action="AddToCart" method="post">
            <input type="hidden" name="menuItemId" value="@Model.MenuItemId" />
            <button class="btn btn-success">Add to Cart</button>
        </form>
    </div>
</div>
